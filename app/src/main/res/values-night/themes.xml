<resources>
    <!-- Base application theme. -->
    <style name="Theme.MovieJam" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="android:colorPrimaryDark">@color/black</item>
        <item name="android:colorPrimary">@color/black</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:colorAccent">@color/grey</item>
        <item name="android:windowBackground">@color/black</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:statusBarColor">@color/yellow</item>
    </style>

    <!-- Custom Styling -->
    <style name="BottomNavigationView" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginEnd">0dp</item>
        <item name="android:background">?android:attr/windowBackground</item>
        <item name="colorPrimary">@color/white</item>
        <item name="android:colorForeground">@color/white</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize10Dp" parent="">
        <item name="cornerSize">10dp</item>
    </style>

    <style name="ToolbarTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ToolbarTheme" parent="Theme.MaterialComponents">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
    </style>

    <!-- Card View List Styling -->
    <style name="CardViewListTitle">
        <item name="android:maxLines">2</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Home Fragment Styling -->
    <style name="HomeProfileImages">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginTop">32dp</item>
    </style>

    <style name="HomeGreetingUser">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HomeSuggestionText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="HomeTopRecyclerView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">32dp</item>
    </style>

    <style name="HomeContentTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HomeContentRecyclerView">
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
    </style>

    <style name="ProfileTextContent">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Detail Activity Styling -->
    <style name="DetailContentTitle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DetailTextContent">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="DetailRatingText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>